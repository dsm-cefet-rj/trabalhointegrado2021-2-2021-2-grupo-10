{
    "$schema": "http://json.schemastore.org/prettierrc",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.{js,jsx,ts,tsx,vue}",
        "options": {
          "useTabs": true
        }
      },
      {
        "files": "*.{yml,yaml}",
        "options": {
          "trailingComma": "all"
        }
      }
    ]
  }